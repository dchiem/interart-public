<!DOCTYPE html>
<html>
<head>
  <title>Interart</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
  <div id="title">interART</div>
  <div id="action-list">
    <div><%= link_to "HOME", "/home/landing" %></div>
    <% if session[:user] %>
      <div><%= link_to "PROFILE", user_path(User.find(session[:user])) %></div>
      <div><%= link_to "+UPLOAD", new_piece_path  %></div>
      <div><%= link_to "LOG OUT", "/users/logout" %></div>
    <% else %>
      <div><%= link_to "SIGN UP", "/users/sign_up" %></div>
      <div><%= link_to "LOG IN", "/users/login" %></div>
    <% end %>
  </div>
</div>
<% if flash[:notice] %>
  <div id="flash"><%= flash[:notice] %></div>
<% end %>

<%= yield %>

</body>
</html>
